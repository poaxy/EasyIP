    if [ "$hostname" != "N/A" ] || [ "$org" != "N/A" ]; then
        echo
        print_color $BLUE "üè¢ Network:"
        if [ "$hostname" != "N/A" ]; then
            echo "   üåê Hostname: $hostname"
        fi
        if [ "$org" != "N/A" ]; then
            echo "   üè¢ Organization: $org"
        fi
    fi
    
    # Coordinates
    local loc=$(echo "$data" | jq -r '.loc // "N/A"')
    if [ "$loc" != "N/A" ]; then
        echo
        print_color $PURPLE "üó∫Ô∏è  Coordinates:"
