        echo
        print_color $YELLOW "üîí Privacy & Security:"
        echo "   ‚ÑπÔ∏è  Privacy detection requires API key"
    fi
    
    # Carrier information (API key required)
    local carrier=$(echo "$data" | jq -r '.carrier // empty')
    if [ -n "$carrier" ]; then
